{
  "name": "morphcloud",
  "version": "0.0.10",
  "description": "A Typescript SDK for creating, managing, and interacting with Morph Cloud VMs.",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "prepare": "npm run build",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test:cjs": "node test/test-cjs.cjs",
    "test:esm": "node test/test-esm.js",
    "test:bun": "bun test/test-bun.ts",
    "test:bunts": "bun test/test-bunts.ts",
    "test:integration": "npm run build && jest --config jest.config.cjs",
    "test:unit": "npm run build && jest --config jest.config.cjs"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morph-labs/morph-typescript-sdk.git"
  },
  "author": "Morph",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/morph-labs/morph-typescript-sdk/issues"
  },
  "homepage": "https://github.com/morph-labs/morph-typescript-sdk#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.10.2",
    "@types/ssh2": "^1.15.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "ignore": "^7.0.0",
    "micromatch": "^4.0.8",
    "node-ssh": "^13.2.0",
    "uuid": "^11.1.0"
  }
}
